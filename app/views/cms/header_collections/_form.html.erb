<%= f.cms_text_field :name %>
<%= f.cms_text_field :danish_name %>
<div class="fields">
<h3>Header types</h3>
<ul>
<% @header_types.each do |header_type| %>
	<li style="list-style-type: none;">
		<%= check_box_tag "header_collection[header_type_ids][]", header_type.id, @header_collection.header_types.include?(header_type) -%> <%= header_type.name -%>
	</li>
<% end %>
</ul>
</div>
<%= f.cms_drop_down :section_id, Section.not_hidden(:order => "name").map{|e| [e.name, e.id]} %>


<%= f.cms_text_editor :description %>