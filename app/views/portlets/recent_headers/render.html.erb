<link rel="stylesheet" type="text/css" href="/stylesheets/headers/headers.css" />

<h1>What's New?</h1>
<% @headers.each do |header| %>
	<% if header.published && !header.cart_id %>
		<div class="headerCard" id="HeaderView_<%= header.id.to_s %>_headerCard">
		    <table cellspacing="0" cellpadding="0" class="headerPhotoContainer">
		        <tbody><tr><td style="padding: 0pt;">
		            <a href="/headers/header?id=<%= header.id.to_s %>" id="header_<%= header.id.to_s %>_photo_link"><img style="border-width: 0px;" alt="photo" width="235px" height="176px" src="<%= header.attachment_link ? header.attachment_link : 'broken' %>" id="header_<%= header.id.to_s %>_photo"></a>
		        </td></tr>
		    </tbody></table>
		    <div class="headerSummaryContainer">
		        <a style="font-weight: bold;" class="dotted" id="header_<%= header.id.to_s %>_summary" href="/headers/header?id=<%= header.id.to_s %>"><%= header.summary_description %></a>
		    </div>
			<span style='text-align: center;'>
			    <div class="headerType" id="header_<%= header.id.to_s %>_type"><%= header.header_type.name %></div>
			</span>
		</div>
	<% end %>
<% end %>
